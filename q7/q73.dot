digraph DFA {
    rankdir=LR;
    size="8,5";

    // Accepting state
    node [shape = doublecircle];
    q4;

    // Other states
    node [shape = circle];
    q0 q1 q2 q3;

    // Start arrow
    start [shape=point];
    start -> q0;

    // Transitions
    q0 -> q0 [label="0"];
    q0 -> q1 [label="1"];

    q1 -> q0 [label="0"];
    q1 -> q2 [label="1"];

    q2 -> q3 [label="0"];
    q2 -> q2 [label="1"];

    q3 -> q0 [label="0"];
    q3 -> q4 [label="1"];

    q4 -> q4 [label="0,1"]; // stay accepted once found
}
