digraph DFA {
    rankdir=LR;
    size="8,5";
    node [shape = doublecircle]; q3;    // Accepting state
    node [shape = circle]; q0 q1 q2 qd;

    // invisible start arrow
    start [shape=point];
    start -> q0;

    // q0: start state
    q0 -> q1 [label = "1"];
    q0 -> qd [label = "0"];

    // q1: saw '1'
    q1 -> q2 [label = "0"];
    q1 -> qd [label = "1"];   // fixed: go to dead state on 1

    // q2: saw '10'
    q2 -> q3 [label = "1"];
    q2 -> qd [label = "0"];

    // q3: already matched "101" at start, accept all further 0/1
    q3 -> q3 [label = "0,1"];

    // Dead state qd
    qd -> qd [label = "0,1"];
}

