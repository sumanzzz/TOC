digraph DFA {
    rankdir=LR;
    size="8,5";
    node [shape = doublecircle]; q1 q2;  // Accepting states
    node [shape = circle]; q0 qd;

    // invisible start arrow
    start [shape=point];
    start -> q0;

    // Transitions from q0
    q0 -> q1 [label = "a"];
    q0 -> qd [label = "b"];

    // Transitions from q1
    q1 -> q2 [label = "a"];
    q1 -> q1 [label = "b"];

    // Transitions from q2
    q2 -> q2 [label = "a"];
    q2 -> q1 [label = "b"];

    // Dead state qd
    qd -> qd [label = "a,b"];
}
